<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/job_name"
                android:text="岗位名称"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLength="12"
                android:textColor="@color/base_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/create_time"
                android:text="刚刚发布"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:alpha="0.5"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/common_tag_orange"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/salary"
            android:text="10k-20k"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textColor="@color/main_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/enterprise_name"
            android:text="公司名称"
            android:textColor="@color/base_font_color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/working_region"
                android:text="working_regi"
                android:padding="3dp"
                android:textSize="13sp"
                android:background="@color/base_layout_color"
                android:textColor="#cccccc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/working_day"
                android:text="working_day"
                android:padding="3dp"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:background="@color/base_layout_color"
                android:textColor="#cccccc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/working_time"
                android:text="working_time"
                android:padding="3dp"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:background="@color/base_layout_color"
                android:textColor="#cccccc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/publisher"
                android:text="发布者"
                android:padding="3dp"
                android:textSize="12sp"
                android:textColor="@color/base_font_color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="发布"
                android:padding="1dp"
                android:textSize="10sp"
                android:alpha="0.3"
                android:textColor="@color/white"
                android:background="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="@color/base_layout_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>